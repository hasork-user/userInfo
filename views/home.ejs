<% include ./partials/header %>

<% users.forEach(function(user){ %>
<div class="ui main text container segment">
	<div class="ui huge header">
		<%= user.name %>
			<form method="POST" action="/user/<%= user._id %>?_method=DELETE">
			<button id="deleteBtn" class="ui red button" data-tooltip="Delete." data-position="bottom left" data-inverted=""><i class="archive icon"></i></button>
			<a href="/user/edit/<%= user._id %>" id="deleteBtn" class="ui yellow button" data-tooltip="Edit." data-position="bottom left" data-inverted=""><i class="pencil alternate icon"></i></a>
		</form>
	</div>
	<div class="ui list">
		<div class="item">
			 <i class="mobile alternate icon"></i>
			 <div class="content" data-tooltip="Mobile Number." data-position="left center" data-inverted=""><%= user.mobile %></div>
		</div>
		<div class="item">
			<i class="birthday cake icon"></i>
			 <div class="content" data-tooltip="Age." data-position="left center" data-inverted=""><%= user.age %></div>
		</div>
	</div>
</div>
<% }); %>

<% include ./partials/footer %>